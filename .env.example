# Environment Variables for Personnel Tracking System
# Copy this file to .env and update the values for your environment

# ===================================================================
# Database Configuration - Local (Main Database)
# ===================================================================
DB_HOST=localhost
DB_NAME=personnel_tracking
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# ===================================================================
# External Database Configuration (Read-Only)
# ===================================================================
EXTERNAL_DB_HOST=your_external_db_host
EXTERNAL_DB_NAME=your_external_db_name
EXTERNAL_DB_USERNAME=your_external_db_username
EXTERNAL_DB_PASSWORD=your_external_db_password

# ===================================================================
# JWT Configuration (IMPORTANT: Generate new secret for production!)
# ===================================================================
JWT_SECRET=your_jwt_secret_key_here_minimum_256_bits
JWT_EXPIRATION=1800000
JWT_ISSUER=personnel-tracking-system

# ===================================================================
# SMS Gateway Configuration
# ===================================================================
SMS_GATEWAY_URL=https://your-sms-provider.com/api/v1/otp
SMS_GATEWAY_API_ID=your_sms_api_id
SMS_GATEWAY_API_KEY=your_sms_api_key
SMS_SENDER_ID=YOUR_SENDER_ID

# ===================================================================
# CORS Configuration
# ===================================================================
CORS_ALLOWED_ORIGINS=https://your-domain.com

# ===================================================================
# IP Tracking Configuration
# ===================================================================
IP_TRACKING_ENABLED=true
IP_TRACKING_PRIVACY_ENABLED=true
IP_TRACKING_ANONYMIZE_REPORTS=true
IP_TRACKING_AUDIT_LOGGING=true
IP_TRACKING_RETENTION_DAYS=365
IP_TRACKING_ANONYMIZATION_ENABLED=true
IP_TRACKING_ANONYMIZATION_METHOD=MASK

# ===================================================================
# SSL Configuration (if using HTTPS)
# ===================================================================
SSL_ENABLED=false
SSL_KEYSTORE_PATH=/app/ssl/keystore.p12
SSL_KEYSTORE_PASSWORD=your_keystore_password
SSL_KEYSTORE_TYPE=PKCS12